!!! 
%html
%head
	%title news site
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true 
	= javascript_include_tag 'application', 'data-turbolinks-track' => true 
	= csrf_meta_tags 
%body
	%nav.navbar.navbar-transparent
		.container
			.navbar-brand= link_to "Save Metropolis", root_path

			- if user_signed_in?
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "New Article", new_article_path
					%li= link_to "Account", edit_user_registration_path
					%li= link_to "Sign Out", destroy_user_session_path, method: :delete
			- else
			%button.navbar-toggler{"aria-controls" => "exCollapsingNavbar", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#exCollapsingNavbar", "data-toggle" => "collapse", :type => "button"}
			#exCollapsingNavbar.collapse.bg-inverse.text-muted.p-1
				/ %li= link_to "Sign Up", new_user_registration_path
				%li= link_to "Log in", new_user_session_path


	.container
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert alert-info"
		= yield 

